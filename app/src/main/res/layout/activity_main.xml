<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.crazydwarf.chimaeraqm.wavetoolbar.WaveToolbar
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:appIconShow="false"
        app:backIcon="@drawable/ic_chevron_left_white_32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menuIcon="@drawable/flag_eygpt"
        app:title="@string/app_name"
        app:titleColor="@color/colorWhite"
        app:titleSize="20sp"
        app:viewBackground="@color/colorTrans"
        app:wave_Amlitude="20"
        app:wave_Speed="0.02" />

    <Button
        android:id="@+id/bn_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="ChangeColor"
        android:background="@color/colorBlue"
        android:textColor="@color/colorWhite"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_menu" />

</android.support.constraint.ConstraintLayout>